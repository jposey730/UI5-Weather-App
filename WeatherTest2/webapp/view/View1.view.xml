<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="WeatherTest2.controller.View1" displayBlock="true">
	<App xmlns="sap.m">
		<pages><Page title="{/cityName} Weather">
				<content>
				
				    <Text id="__text1" text="Enter Your City Below:" width="100%"/>
				    <Input id="cityInput" placeholder="Enter a City Name:" width="100%" submit="Search"/>
				    
				    <Button id="Search" text="Search" width="100px" press="Search"/>
				    <sap.ui.core:Icon xmlns:sap.ui.core="sap.ui.core" src="sap-icon://search" size="2em" id="__icon1"/>
				    <DisplayListItem value="{/Temp}" id="Temp" type="Navigation" label="Temperature"/>
				    <DisplayListItem value="{/Max_Temp}" id="temp_max" type="Navigation" label="Max Temperature"/>
				    <DisplayListItem value="{/Min_Temp}" id="temp_min" type="Navigation" label="Min Temperature"/>
				    <DisplayListItem type="Navigation" label="Weather Condition" value="{/Weather_Cond}" id="weatherCond"/>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>